{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kocha Tili",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#objects"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kocha",
          "match": "\\b(agar|oxshamasa|oxiri|while|for|qaytar|xullas|endi|fn)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.kocha",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.kocha",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "name": "comment.line.number-sign.kocha",
      "begin": "#",
      "end": "$"
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.kocha",
          "match": "\\bfn\\s+\\w+\\b"
        },
        {
          "name": "support.function.kocha",
          "match": "\\b(korsat)\\b"
        }
      ]
    },
    "objects": {
      "patterns": [
        {
          "name": "meta.structure.dictionary.json.kocha",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "include": "#strings"
            },
            {
              "name": "constant.numeric.kocha",
              "match": "\\b\\d+\\b"
            },
            {
              "name": "variable.other.kocha",
              "match": "\\b\\w+\\b"
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.kocha"
}
